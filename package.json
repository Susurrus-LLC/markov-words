{
  "name": "markov-words",
  "version": "1.0.0",
  "description": "Word generator based on Markov chains",
  "homepage": "https://susurrus-llc.github.io/markov-words/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Susurrus-LLC/markov-words"
  },
  "bugs": {
    "url": "https://github.com/Susurrus-LLC/markov-words/issues"
  },
  "author": "Ian A. Cook <ian@code.ianacook.com>",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "predeploy": "yarn build",
    "deploy": "gh-pages -d build",
    "format": "prettier-standard src/**/*.{js,jsx,ts,tsx}",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-standard"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "@types/jest": "27.0.2",
    "@types/node": "16.10.2",
    "@types/react": "17.0.25",
    "@types/react-dom": "17.0.9",
    "node-sass": "^6.0.1",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "4.4.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^3.2.3",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "modularscale-sass": "^3.0.10",
    "prettier-standard": "^16.4.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "standard-with-typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
